{
  "openapi": "3.0.0",
  "info": {
    "title": "JewelVault Backend API",
    "description": "RESTful API for JewelVault - Jewelry Management System (Legacy/Test Endpoints Only)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development"
    },
     {
      "url": "https://jewelvaultbackend-ep2l5o74za-el.a.run.app",
      "description": "Production"
    }
  ],
  "paths": {
    "/metal-rate/": {
      "get": {
        "summary": "Get current metal rates (gold 24K per 10g, silver per 1kg)",
        "operationId": "metal_rate",
        "description": "Selects the first valid price aggregated from BankBazaar, GoodReturns, and AngelOne. Returns a compact list of metals with unit size and price.",
        "responses": {
          "200": {
            "description": "Current metal rates",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "message": {"type": "string"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "timestamp": {"type": "string", "format": "date-time"},
                        "rates": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "metal": {"type": "string", "example": "gold"},
                              "unit_gm": {"type": "number", "example": 10},
                              "price": {"type": "number", "nullable": true, "example": 135530.0}
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "example": {
                  "success": true,
                  "message": "",
                  "data": {
                    "timestamp": "2026-01-04T15:55:13.981992",
                    "rates": [
                      {"metal": "gold", "unit_gm": 10, "price": 135530.0},
                      {"metal": "silver", "unit_gm": 1000, "price": 240000.0}
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error during scraping",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "message": {"type": "string"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "timestamp": {"type": "string", "format": "date-time"},
                        "rates": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "metal": {"type": "string"},
                              "unit_gm": {"type": "number"},
                              "price": {"type": "number", "nullable": true}
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Root endpoint",
        "operationId": "root_message",
        "responses": {
          "200": {
            "description": "Welcome message"
          }
        }
      }
    },
    "/ping/": {
      "get": {
        "summary": "Health check",
        "operationId": "ping_view",
        "responses": {
          "200": {
            "description": "Status OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "List users from Firestore",
        "operationId": "list_users",
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      }
    },
    "/vault-samples/": {
      "get": {
        "summary": "List vault samples from PostgreSQL",
        "operationId": "list_vault_samples",
        "responses": {
          "200": {
            "description": "List of vault samples"
          }
        }
      }
    },
    "/vault-samples/seed/": {
      "get": {
        "summary": "Get vault sample seed status",
        "operationId": "get_seed",
        "responses": {
          "200": {
            "description": "Seed status"
          }
        }
      },
      "post": {
        "summary": "Seed vault samples table",
        "operationId": "seed_vault_samples",
        "responses": {
          "200": {
            "description": "Seed operation result"
          }
        }
      }
    }
  }
}
