{
  "openapi": "3.0.0",
  "info": {
    "title": "JewelVault Backend API",
    "description": "RESTful API for JewelVault - Jewelry Management System (Legacy/Test Endpoints Only)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development"
    },
     {
      "url": "https://jewelvaultbackend-ep2l5o74za-el.a.run.app",
      "description": "Production"
    }
  ],
  "paths": {
    "/metal-rate/": {
      "get": {
        "summary": "Get current metal rates (gold 24K and silver 1kg)",
        "operationId": "metal_rate",
        "description": "Scrapes real-time gold 24K and silver 1kg prices from multiple sources (GoodReturns, AngelOne)",
        "parameters": [
          {
            "name": "state",
            "in": "query",
            "description": "Indian state for regional rates (default: karnataka)",
            "schema": {
              "type": "string",
              "default": "karnataka"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Current gold 24K and silver 1kg rates from multiple sources",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {"type": "string"},
                    "timestamp": {"type": "string"},
                    "rates": {
                      "type": "object",
                      "properties": {
                        "gold_24k": {"type": "object"},
                        "silver_1kg": {"type": "object"}
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error during scraping"
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Root endpoint",
        "operationId": "root_message",
        "responses": {
          "200": {
            "description": "Welcome message"
          }
        }
      }
    },
    "/ping/": {
      "get": {
        "summary": "Health check",
        "operationId": "ping_view",
        "responses": {
          "200": {
            "description": "Status OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "List users from Firestore",
        "operationId": "list_users",
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      }
    },
    "/vault-samples/": {
      "get": {
        "summary": "List vault samples from PostgreSQL",
        "operationId": "list_vault_samples",
        "responses": {
          "200": {
            "description": "List of vault samples"
          }
        }
      }
    },
    "/vault-samples/seed/": {
      "get": {
        "summary": "Get vault sample seed status",
        "operationId": "get_seed",
        "responses": {
          "200": {
            "description": "Seed status"
          }
        }
      },
      "post": {
        "summary": "Seed vault samples table",
        "operationId": "seed_vault_samples",
        "responses": {
          "200": {
            "description": "Seed operation result"
          }
        }
      }
    }
  }
}